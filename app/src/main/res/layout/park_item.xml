<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_park_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_list_item_effect">

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="@dimen/park_item_height">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/park_item_height"
            android:layout_height="@dimen/park_item_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@+id/iv_head"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_name"
                style="@style/main_tv"
                android:text="name" />

            <TextView
                android:id="@+id/tv_address"
                style="@style/main_tv"
                android:layout_below="@+id/tv_name"
                android:text="address"
                android:textSize="@dimen/text_size" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_music_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/divide_padding_right"
            android:src="@mipmap/icon_right_arrow" />
    </RelativeLayout>
</RelativeLayout>
